#  >>---------------------------Problem Solution---------------------------<<
#  >>-------------------------URI Online Judge-----------------------------<<

# >>--------------------- Average 2-----------------------------------------<<

def avg_2(A,B,C):
    avg = (A*2+B*3+C*5)/(2+3+5)
    return ("MEDIA = {:0.1f}".format(avg))

A=float(input())
B=float(input())
C=float(input())

print(avg_2(A,B,C))
