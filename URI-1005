# >>----------Function World---------------------------<<

def avg(A,B):
    avg=((A*3.5)+(B*7.5))/(3.5+7.5)
    return ("MEDIA = {:0.5f}".format(avg))

A=float(input())
B=float(input())
print(avg(A,B))
